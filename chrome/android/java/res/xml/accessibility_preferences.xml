<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <org.chromium.chrome.browser.accessibility.settings.TextScalePreference
        android:key="text_scale"
        android:title="@string/font_size"
        android:selectable="false" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="force_enable_zoom"
        android:summary="@string/force_enable_zoom_summary"
        android:title="@string/force_enable_zoom_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="text_rewrap"
        android:summary="@string/accessibility_preferences_text_rewrap_summary"
        android:title="@string/accessibility_preferences_text_rewrap_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="reader_for_accessibility"
        android:summary="@string/reader_for_accessibility_summary"
        android:title="@string/reader_for_accessibility_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="keep_address_bar_content"
        android:summary="@string/accessibility_preferences_keep_address_bar_content_summary"
        android:title="@string/accessibility_preferences_keep_address_bar_content_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="keep_toolbar_visible"
        android:summary="@string/accessibility_keep_toolbar_visible_summary"
        android:title="@string/accessibility_keep_toolbar_visible_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="enable_bottom_toolbar"
        android:summary="@string/accessibility_preferences_enable_bottom_toolbar_summary"
        android:title="@string/accessibility_preferences_enable_bottom_toolbar_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="enable_overscroll_button"
        android:summary="@string/accessibility_preferences_enable_overscroll_button_summary"
        android:title="@string/accessibility_preferences_enable_overscroll_button_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="open_in_external_app"
        android:summary="@string/accessibility_preferences_open_in_external_application_summary"
        android:title="@string/accessibility_preferences_open_in_external_application_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="tabswitcher_opens_contextual_menu"
        android:summary="@string/accessibility_preferences_holding_tabswitcher_opens_contextual_menu_summary"
        android:title="@string/accessibility_preferences_holding_tabswitcher_opens_contextual_menu_summary" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="side_swipe_mode_enabled"
        android:summary="@string/accessibility_preferences_enable_side_swipe_summary"
        android:title="@string/accessibility_preferences_enable_side_swipe_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="up_swipe_mode_enabled"
        android:summary="@string/accessibility_preferences_enable_up_swipe_summary"
        android:title="@string/accessibility_preferences_enable_up_swipe_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="show_extensions_first"
        android:summary="@string/accessibility_preferences_show_extensions_first_summary"
        android:title="@string/accessibility_preferences_show_extensions_first_title" />

    <org.chromium.components.browser_ui.settings.ChromeBaseCheckBoxPreference
        android:key="desktop_mode"
        android:summary="@string/website_settings_desktop_mode_enabled"
        android:title="@string/website_settings_desktop_mode" />

    <Preference
        android:key="captions"
        android:title="@string/accessibility_captions_title"/>

    <Preference
        android:fragment="org.chromium.chrome.browser.image_descriptions.ImageDescriptionsSettings"
        android:key="image_descriptions"
        android:title="@string/image_descriptions_settings_title" />

</PreferenceScreen>
