<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="false">

    <org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout
        android:id="@+id/adaptive_radio_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
          android:id="@+id/adaptive_option_based_on_usage"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/min_touch_target_size"
          android:paddingTop="10dp"
          app:iconSrc="@drawable/ic_auto_awesome"
          app:primaryText="@string/adaptive_toolbar_button_preference_based_on_your_usage"/>

      <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
          android:id="@+id/adaptive_option_new_tab"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/min_touch_target_size"
          android:paddingTop="10dp"
          app:iconSrc="@drawable/new_tab_icon"
          app:primaryText="@string/adaptive_toolbar_button_preference_new_tab"/>

      <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
          android:id="@+id/adaptive_option_share"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/min_touch_target_size"
          android:paddingTop="10dp"
          app:iconSrc="@drawable/ic_share_white_24dp"
          app:primaryText="@string/adaptive_toolbar_button_preference_share" />

      <org.chromium.components.browser_ui.widget.RadioButtonWithDescription
          android:id="@+id/adaptive_option_voice_search"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="@dimen/min_touch_target_size"
          android:paddingTop="10dp"
          app:iconSrc="@drawable/btn_mic"
          app:primaryText="@string/adaptive_toolbar_button_preference_voice_search" />

    </org.chromium.components.browser_ui.widget.RadioButtonWithDescriptionLayout>

</LinearLayout>